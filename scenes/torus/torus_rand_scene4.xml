		</transform>
		<sampler type="independent">
			<integer name="sampleCount" value="$sampleCount"/>
		</sampler>
		<film type="hdrfilm">
            <!-- <string name="pixelFormat" value="rgb, luminance, rgb"/>
	        <string name="channelNames" value="normal, distance, albedo"/> -->
			<integer name="height" value="768"/>
